{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSources": true,
		"module": "commonjs",
		"target": "es2024",
		"allowJs": true,
		"noEmit": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": false,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"types": ["svelte", "node", "jest"]
	},
	"include": [
		"**/*.ts",
		"**/*.js",
		"**/*.svelte",
		"eslint.config.mjs",
		"esbuild.config.mjs"
	]
}
